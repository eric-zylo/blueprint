%div.flex.items-center.justify-center.h-screen.bg-gray-100
  %div.bg-white.shadow-lg.rounded-lg.p-8.max-w-sm.w-full
    = render "form"
    %h3.text-lg.font-semibold.mt-6 Cancel my account
    %div.mt-2
      = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
    %div.mt-4
      = link_to "Back", :back, class: "text-indigo-600 hover:text-indigo-700"
