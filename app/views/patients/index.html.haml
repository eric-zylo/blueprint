.flex.justify-end.pb-5
  = link_to 'Add Patient', new_user_patient_path(current_user), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'

%table.min-w-full.divide-y.divide-gray-200
  %thead.bg-gray-50
    %tr
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Patient Email
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Patient First Name
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Patient Last Name
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Date Added
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Number of Assessments
  %tbody.bg-white.divide-y.divide-gray-200
    - @patients.each do |patient|
      %tr
        %td.px-6.py-4.whitespace-nowrap= link_to patient.email, user_patient_path(current_user, patient), class: "text-blue-600 hover:text-blue-800 underline"
        %td.px-6.py-4.whitespace-nowrap= patient.first_name 
        %td.px-6.py-4.whitespace-nowrap= patient.last_name
        %td.px-6.py-4.whitespace-nowrap= patient.created_at.strftime('%Y-%m-%d %H:%M:%S')
        %td.px-6.py-4.whitespace-nowrap= patient.diagnostic_screener_instances.count
