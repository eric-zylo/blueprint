= form_with(model: patient, url: user_patients_path(current_user), method: :post) do |form|
  - if patient.errors.any?
    #error_explanation.bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.mb-4
      %h2.font-bold.mb-2= "#{pluralize(patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul.list-disc.list-inside
        - patient.errors.full_messages.each do |message|
          %li= message

  .mb-4
    = form.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2"
    = form.text_field :first_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"

  .mb-4
    = form.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2"
    = form.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"

  .mb-4
    = form.label :email, class: "block text-gray-700 text-sm font-bold mb-2"
    = form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"

  .flex.items-center.justify-between
    = form.submit "Save Patient", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-2"
    = link_to "Cancel", user_patients_path(current_user), class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
