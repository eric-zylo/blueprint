.flex.justify-end.pb-5
  = link_to 'New Assessment', new_user_assessment_path(current_user), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'

%table.min-w-full.divide-y.divide-gray-200
  %thead.bg-gray-50
    %tr
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Patient First Name
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Patient Last Name
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Patient Email
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Completed At
      %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
        Created At
  %tbody.bg-white.divide-y.divide-gray-200
    - @assessments.each do |assessment|
      %tr
        %td.px-6.py-4.whitespace-nowrap= assessment.patient.first_name
        %td.px-6.py-4.whitespace-nowrap= assessment.patient.last_name
        %td.px-6.py-4.whitespace-nowrap= assessment.patient.email
        %td.px-6.py-4.whitespace-nowrap= assessment.completed_at&.strftime('%Y-%m-%d %H:%M:%S')
        %td.px-6.py-4.whitespace-nowrap= assessment.created_at.strftime('%Y-%m-%d %H:%M:%S')
